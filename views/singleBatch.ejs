<%- include('partials/header'); %>
    <div class="h-full ml-14 mt-14 mb-10 md:ml-64">
        
        <div class="items-center justify-center">

            <div class="max-w-md mx-auto bg-gray-100 rounded-lg shadow-md overflow-hidden mt-14">
      
                <h2 class="text-2xl font-bold mt-5 text-gray-800 text-center"><%= getSingleBatch.batchname %> </h2>
                <div class="p-6">
                  
                  <p >Teacher Assigned: <%= getSingleBatch.teacher.fname %></p>
                  <p>Course: <%= getSingleBatch.bcourse.coursename %></p>
                  <p>No. of Student: <%= getBatchStudentCount %></p>


                  
                </div>
              </div>

              <div class="flex flex-wrap items-center px-4 py-2">

                <div class="relative text-right">
                    <a href="<%= getSingleBatch._id %>/download"
                        class="border border-blue-500 uppercase px-3 py-1 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all text-sm duration-150 hover:bg-blue-500 hover:text-white"
                        ><span class="font-semibold">Download</span></a>
                </div>
                
                <div class="relative text-right">
                    <a href="/student"
                        class="border border-blue-500 uppercase px-3 py-1 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all text-sm duration-150 hover:bg-blue-500 hover:text-white"
                        ><span class="font-semibold">Add New Student</span></a>
                </div>


                
                <div class="relative w-56">
                    <a data-popover-target="delete-batch" data-popover-placement="bottom"
                        class="border border-red-500 uppercase px-3 py-1 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all text-sm duration-150 hover:text-red-500"
                        ><span class="font-semibold">Delete Batch</span></a>
                        <div data-popover id="delete-batch" role="tooltip" class="w-full z-50 invisible inline-block text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800">
                            <div class="p-3 space-y-2">
                                <h3 class="text-center font-semibold text-gray-900 dark:text-white">Warning</h3>
                                <p>This action will <span class="font-semibold text-red-600 dark:text-red-500">DELETE</span> all the Student in these Branch and Branch as well.</p>
                                
                                <div class="text-center">

                                    <a href="/batch/<%= getSingleBatch._id %>/delete"
                                    class="border border-red-500 bg-white text-gray-800 hover:bg-red-500 hover:text-white text-xs font-bold uppercase px-5 py-2 rounded outline-none focus:outline-none mt-4 ease-linear transition-all duration-150"
                                    >
                                    Delete
                            </a>
                                </div>
                            </div>
                            <div data-popper-arrow></div>
                        </div>
                </div>

            </div>


            <div class="w-full overflow-x-auto">
                    
                    <table class="w-full">
                        <thead>
                            <tr
                                class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                <th class="px-4 py-3">Student Name</th>
                                <th class="px-4 py-3">Email</th>
                                <th class="px-4 py-3">Course</th>

                                <th class="px-4 py-3">Date</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                        <% getBatchStudent.forEach(element => { %>
                        <tr
                            class="bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-900 text-gray-700 dark:text-gray-400">
                            <td class="px-4 py-3">
                                <div class="flex items-center text-sm">
                                    
                                    <div>
                                        <a href="/student/confirm/<%= element._id %>"><p class="font-semibold"><%= element.fullname %></p></a>
                                        <p class="text-xs text-gray-600 dark:text-gray-400">
                                            <%= element.mobile %>
                                        </p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-4 py-3 text-sm"><%= element.email %></td>
                            <td class="px-4 py-3 text-sm"><%= element.course.coursename %></td>                    
                            
                            <td class="px-4 py-3 text-sm"><%= element.createdAt.toLocaleDateString('en-GB')  %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        </div>

    </div>
    <%- include('partials/footer'); %>