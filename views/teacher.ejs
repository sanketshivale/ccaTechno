<%- include('partials/header'); %>
        <div class="h-full ml-14 mt-14 mb-10 md:ml-64">
            <section class="bg-blueGray-50">
                                <% if (message) { %>
                    <% if (message.type == "success") { %>
                     <div class="text-green-900 text-center mt-10 bg-green-100 w-4/12 mx-auto"><%= message.message %></div>
                    <% } else { %>
                     
                  <div class="text-red-900 text-center mt-10 bg-red-100 w-4/12 mx-auto"><%= message.message %></div>
                <% } %><% } %>
                <div class="w-full lg:w-8/12 mx-auto mt-6">
                    <div
                        class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-blueGray-100 border-0">
                        <div class="rounded-t mb-0 px-6 py-6">
                            <div class="text-center flex justify-between ">
                                <h6 class="font-semibold text-base text-gray-900 dark:text-gray-50">
                                    Teacher Registration Process
                                </h6>
                            </div>
                        </div>
                        <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
                            <form method="post" action="/teacher">
                                <h6 class="text-blueGray-400 text-sm mt-3 mb-6 font-bold uppercase ">
                                    Teacher Information
                                </h6>
                                <div class="flex flex-wrap">
                                    <div class="w-full lg:w-6/12 px-4">
                                        <div class="relative w-full mb-3">
                                            <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2 "
                                                htmlfor="grid-password">
                                                Full Name
                                            </label>
                                            <input type="text" placeholder="fullname" name="fname" required
                                                class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">
                                        </div>
                                    </div>
                                    <div class="w-full lg:w-6/12 px-4">
                                        <div class="relative w-full mb-3">
                                            <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2 "
                                                htmlfor="grid-password">
                                                Email address
                                            </label>
                                            <input type="email" placeholder="email" name="email" required
                                                class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">
                                        </div>
                                    </div>
                                    <div class="w-full lg:w-6/12 px-4">
                                        <div class="relative w-full mb-3">
                                            <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2 "
                                                htmlfor="grid-password">
                                                Mobile Number
                                            </label>
                                            <input type="tel" pattern="[6789][0-9]{9}" placeholder="mobile no."
                                                name="mobile" required
                                                class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">
                                        </div>
                                    </div>
                                    
                                    <div class="w-full lg:w-6/12 px-4">
                                        <div class="relative w-full mb-3">
                                            <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2 "
                                                htmlfor="grid-password">
                                                Gender
                                            </label>
                                            <td>
                                                Male <input
                                                    class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring ease-linear transition-all duration-150"
                                                    type="radio" name="gender" value="Male" />
                                                Female <input
                                                    class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring ease-linear transition-all duration-150"
                                                    type="radio" name="gender" value="Female" />
                                            </td>
                                        </div>
                                    </div>
                                </div>

                                
                                    <button
                                        class="mx-auto bg-blue-500 dark:bg-gray-100 text-white active:bg-blue-600 dark:text-gray-800 dark:active:text-gray-700 text-xs font-bold uppercase px-5 py-3 rounded outline-none focus:outline-none mt-4 ease-linear transition-all duration-150"
                                        type="submit">
                                        Admit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
            
            </section>

            <section class="mx-3">
                
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Teacher Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Email
                </th>
                <th scope="col" class="px-6 py-3">
                   Phone No.
                </th>
                <th scope="col" class="px-6 py-3">
                    Gender
                </th>
                <th scope="col" class="px-6 py-3">
                   Delete
                </th>
            </tr>
        </thead>
        <tbody>
            <% getAllTeacher.forEach(element => { %>
                <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <%= element.fname %>
                    </th>
                    <td class="px-6 py-4">
                        <%= element.email %>
                    </td>
                    <td class="px-6 py-4">
                        <%= element.mobile %>
                    </td>
                    <td class="px-6 py-4">
                        <%= element.gender %>
                    </td>
                    <td class="px-6 py-4">
                        <a href="teacher/deleteTeacher/<%= element._id %>" class="bg-red-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

            </section>
        </div>
            <%- include('partials/footer'); %>

