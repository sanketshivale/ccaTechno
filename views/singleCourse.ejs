<%- include('partials/header'); %>
    <div class="h-full ml-14 mt-14 mb-10 md:ml-64">
        <section class="bg-blueGray-50">
            <% if (message) { %>
                <% if (message.type=="success" ) { %>
                    <div class="text-green-900 text-center mt-10 bg-green-100 w-4/12 mx-auto">
                        <%= message.message %>
                    </div>
                    <% } else { %>

                        <div class="text-red-900 text-center mt-10 bg-red-100 w-4/12 mx-auto">
                            <%= message.message %>
                        </div>
                        <% } %>
                            <% } %>


        </section>

        <div class="items-center justify-center">

            <div class="max-w-md mx-auto bg-gray-100 rounded-lg shadow-md overflow-hidden mt-14">
                <h2 class="text-2xl font-bold text-gray-800 text-center">
                    <%= findSCourse.coursename %>
                </h2>
                <p class="mx-2 text-center font-semibold text-gray-800">
                    <%= findSCourse.desc %>
                </p>
                <div class="p-6">


                    <p>Duration: <%= findSCourse.duration %>
                    </p>
                    Fees: <%= findSCourse.fees %>

                        <ul>


                        </ul>
                </div>
            </div>


            <div class="w-full overflow-x-auto">
                <div class="flex flex-wrap items-center px-4 py-2">

                    <div class="relative w-full max-w-full flex-grow flex-1 text-right">
                        <a href="/batch"
                            class="border border-blue-500 uppercase px-3 py-1 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all text-sm duration-150 hover:bg-blue-500 hover:text-white"><span
                                class="font-semibold">Create New Batch</span></a>
                    </div>
                </div>
                <table class="w-full">
                    <thead>
                        <tr
                            class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                            <th class="px-4 py-3">Batch Name</th>
                            <th class="px-4 py-3">Teacher Assigned</th>

                            <th class="px-4 py-3">Date</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                        <% getBatchCourseWise.forEach(element=> { %>
                            <tr
                                class="bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-900 text-gray-700 dark:text-gray-400">
                                <td class="px-4 py-3">
                                    <div class="flex items-center text-sm">

                                        <div>
                                            <a href="/batch/<%= element._id %>">
                                                <p class="font-semibold">
                                                    <%= element.batchname %>
                                                </p>
                                            </a>
                                            <p class="text-xs text-gray-600 dark:text-gray-400"> </p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-3 text-sm">
                                    <%= element.teacher.fname %>
                                </td>


                                <td class="px-4 py-3 text-sm">
                                    <%= element.createdAt.toLocaleDateString('en-GB') %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

        </div>

    </div>
    <%- include('partials/footer'); %>
